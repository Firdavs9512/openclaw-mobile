{
  "expo": {
    "name": "OpenClaw Mobile",
    "slug": "openclaw-mobile",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "openclaw",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A2E"
    },
    "ios": {
      "bundleIdentifier": "com.openclaw.mobile",
      "supportsTablet": true,
      "infoPlist": {
        "NSBonjourServices": ["_openclaw-gw._tcp"],
        "NSLocalNetworkUsageDescription": "OpenClaw tarmoqdagi gateway serverlarni topish uchun local tarmoqqa kirish kerak."
      }
    },
    "android": {
      "package": "com.openclaw.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1A1A2E"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_MULTICAST_STATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "QR kod skanerlash uchun kamera ruxsati kerak.",
          "recordAudioAndroid": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
